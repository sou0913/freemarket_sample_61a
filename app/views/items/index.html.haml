/ ヘッダーここまで

/ コンテンツ
.item-index__main__wrapper
  .item-index__main__contents
    .item-index__main__contents__header
      = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/featured/camp/index/index_keyvisual.png?465897195'
    .item-index__main__contents__header-page
      .item-index__main__contents__header-page--prev
        %i.fas.fa-chevron-left
      .item-index__main__contents__header-page--next
        %i.fas.fa-chevron-right

    .item-index__main__contents__categories
      %h2.item-index__main__contents__categories-heading 人気のカテゴリー
      .categories__list
        %ul.categories__list-item
          %li
            = link_to "レディース", "#", class: "type" 
          %li
            = link_to "メンズ", "#", class: "type"
          %li
            = link_to "家電・スマホ・カメラ", "#", class: "type"
          %li
            = link_to "おもちゃ・ホビー・グッズ", "#", class: "type"
    .item-index__main__contents__categories-wrapper
      -if user_signed_in?
        .new__item
          .new__item-header{name: "#"}
            %h3.new__item-header-title あなたへのおすすめ
            = link_to "もっと見る", "#", class: "look"
          .new__item-collection
            %div
              %ul.new__item-collection-list
                - if @recommends.present?
                  -@recommends.each do |item|
                    =render partial: "item", locals:{item: item} 
      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title レディース新着アイテム
          = link_to "もっと見る", category_path(id: 1), class: "look"
        .new__item-collection
          %div
            %ul.new__item-collection-list
              -@ladis.each do |item|
                =render partial: "item", locals:{item: item} 
      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title メンズ新着アイテム
          = link_to "もっと見る", category_path(id:200), class: "look"
        .new__item-collection
          %div
            %ul.new__item-collection-list
              -@mens.each do |item|
                =render partial: "item", locals:{item: item} 
      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title 家電・スマホ・カメラ新着アイテム
          = link_to "もっと見る", category_path(id:898), class: "look"
        .new__item-collection 
          %div
            %ul.new__item-collection-list
              -@electronics.each do |item|
                =render partial: "item", locals:{item: item} 
      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title おもちゃ・ホビー・グッズ新着アイテム
          = link_to "もっと見る", category_path(id:685), class: "look"
        .new__item-collection
          %div
            %ul.new__item-collection-list
              -@toys.each do |item|
                =render partial: "item", locals:{item: item} 
    .item-index__main__contents__brands
      %h2.item-index__main__contents__brands-heading 人気のブランド
      .brands__list
        %ul.brands__list-item
          %li
            = link_to "シャネル", "#chanel-items", class: "brands"
          %li
            = link_to "ルイヴィトン", "#louisvuitton-items", class: "brands" 
          %li
            = link_to "ナイキ", "#nike-items", class: "brands" 
    .item-index__main__contents__brands-wrapper
      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title#chanel-items シャネル新着アイテム
          = link_to "もっと見る", "#", class: "look"
        .new__item-collection
          %div
            %ul.new__item-collection-list
              -@chanels.each do |item|
                =render partial: "item", locals:{item: item} 

      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title#louisvuitton-items ルイヴィトン新着アイテム
          = link_to "もっと見る", "#", class: "look"
        .new__item-collection
          %div
            %ul.new__item-collection-list
              -@louisvuittons.each do |item|
                =render partial: "item", locals:{item: item} 
      .new__item
        .new__item-header{name: "#"}
          %h3.new__item-header-title#nike-items ナイキ新着アイテム
          = link_to "もっと見る", "#", class: "look"
        .new__item-collection
          %div
            %ul.new__item-collection-list
              -@nikes.each do |item|
                =render partial: "item", locals:{item: item} 
